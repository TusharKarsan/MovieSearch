@model MovieWebsite.Models.HomeIndexViewModel
@using MovieModels.MoviePoco

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <div id="topMoviesCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (int imgCount = 0; imgCount < Model.Movies.Length; imgCount++)
                {
                    @if (imgCount == 0)
                    {
                        <div class="carousel-item active">
                            <img src="@Model.Movies[imgCount].Info.ImageUrl" class="d-block w-100 tk-top-movies" alt="@Model.Movies[imgCount].Title" />
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@Model.Movies[imgCount].Info.ImageUrl" class="d-block w-100 tk-top-movies" alt="@Model.Movies[imgCount].Title" />
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#topMoviesCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#topMoviesCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-8">
        <div class="text-center">
            <h1 class="display-4">Movie Search</h1>
            <p>Developed by Tushar Karsan.</p>
            <p> &nbsp;</p>
            <p>Select the [Search] menu option above to search for movies.</p>
            <p> &nbsp;</p>
            <p>Project [MovieIndex.Tests] contains some unit tests.</p>
        </div>
    </div>
</div>
